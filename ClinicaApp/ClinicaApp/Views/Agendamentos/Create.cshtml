@model ClinicaApp.Models.Agendamento

@{
    ViewData["Title"] = "Criar Agendamento";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="Create" class="d-flex flex-column gap-2">

    <div class="row">
        <div class="col-md-4">
            <label asp-for="Cliente" class="control-label"></label>
            <input asp-for="Cliente" class="form-control"/>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label asp-for="Medico" class="control-label"></label>
            <input asp-for="Medico" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Especialidade" class="control-label"></label>
            <input asp-for="Especialidade" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="DataConsulta" class="control-label"></label>
            <input asp-for="DataConsulta" class="form-control" />
        </div>
    </div>

    <label asp-for="TipoAtendimento" class="control-label"></label>
    <input asp-for="TipoAtendimento" class="form-control" />

    <div class="row gap-2">
        <input type="submit"
               value="Cadastrar Consulta"
               class="btn btn-success" />
        <a asp-controller="Agendamento" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>