@model ClinicaApp.Models.Cliente;

@{
    ViewData["Title"] = "Novo Cliente";
    // ViewData["Title"] = "Criar Cliente"; // Outra forma de definir o título
}

@* o ASP-ACTION deve contar o nome do método referente *@
<form asp-action="Create" class="d-flex flex-column w-25">
    <label asp-for="Nome"></label>
    <input
        asp-for="Nome"
        required 
        placeholder="Digite seu nome" />

    <label asp-for="DataNascimento"></label>
    <input 
        asp-for="DataNascimento"
        name="dataNascimento" />

    <label asp-for="Salario"></label>
    <input 
        asp-for="Salario"
        name="salario" />

    <input
        type="submit" 
        value="Salvar" 
        class="btn btn-primary mt-2" />
</form>
