@model IEnumerable<Cliente>;

@{
}

@* Serve para linkar uma página direto *@
<a class="btn btn-primary" asp-action="Create">Criar Novo Registro</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.Id)</th>
            <th>@Html.DisplayNameFor(Model => Model.Nome)</th>
            <th>@Html.DisplayNameFor(Model => Model.DataNascimento)</th>
            <th>@Html.DisplayNameFor(Model => Model.Salario)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.Salario.ToString("C")</td>
                <td>
                    @* Links para edição de cada item listado pelo Id *@
                    <a class="btn btn-primary" 
                        asp-action="Edit" 
                        asp-route-id="@cliente.Id"> @* Parametro que será enviado no Action *@
                            Editar
                        </a>
                    <a class="btn btn-danger"
                            asp-action="Delete"
                            asp-route-id="@cliente.Id"> @* Parametro que será enviado no Action *@
                        Deletar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

