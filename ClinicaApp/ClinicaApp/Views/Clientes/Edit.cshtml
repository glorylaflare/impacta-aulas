@model Cliente;

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.Nome</h4>

<form asp-action="Edit" class="d-flex flex-column w-25">
    <label asp-for="Nome"></label>
    <input asp-for="Nome"
           required
           placeholder="Digite seu nome" />

    <label asp-for="DataNascimento"></label>
    <input asp-for="DataNascimento"
           name="dataNascimento" />

    <label asp-for="Salario"></label>
    <input asp-for="Salario"
           name="salario" />

    <input type="submit"
           value="Atualizar"
           class="btn btn-primary mt-2" />
</form>
