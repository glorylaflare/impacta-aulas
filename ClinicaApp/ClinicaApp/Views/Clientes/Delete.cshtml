@model Cliente;

@{
    ViewData["Title"] = "Delete Cliente";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.Nome</h4>

<form asp-action="Delete" class="d-flex flex-column w-25">
    <label asp-for="Nome"></label>
    <input asp-for="Nome"
           required
           disabled
           placeholder="Digite seu nome" />

    <label asp-for="DataNascimento"></label>
    <input asp-for="DataNascimento"
           name="dataNascimento"
           disabled />

    <label asp-for="Salario"></label>
    <input asp-for="Salario"
           name="salario"
           disabled />

    <input type="submit"
           value="Deletar"
           class="btn btn-primary mt-2" />
</form>
