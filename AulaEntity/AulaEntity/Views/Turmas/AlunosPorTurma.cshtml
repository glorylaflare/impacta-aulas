@model AulaEntity.Models.Grade  
  
@{  
}  
  
<h2>Turma : @Model.GradeName</h2>  
  
<p>
    <a asp-controller="Student" asp-action="Create" asp-route-gradeId="@Model.GradeId">Adicionar Aluno</a>
</p>

<table class="table table-striped">  
    <thead>  
        <tr>  
            <th>Name</th>   
        </tr>  
    </thead>  
    <tbody>  
        @if (Model.Students != null)  
        {  
            foreach (var aluno in Model.Students)  
            {  
                <tr>  
                    <td>@aluno.Name</td> 
                </tr>  
            }  
        }  
    </tbody>
    </table>